# Environment Configuration
# Copy this file to .env and update with your values

# Application
PROJECT_NAME=Multi-Tenant E-Commerce Platform
VERSION=1.0.0
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/ecommerce_platform
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50

# Security
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Cache TTL (seconds)
CACHE_TTL_PRODUCTS=900
CACHE_TTL_INVENTORY=60
CACHE_TTL_STORE_CONFIG=3600
CACHE_TTL_CATEGORIES=1800

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_TIER1_SYNC=1000
RATE_LIMIT_TIER2_SYNC=500
RATE_LIMIT_TIER3_SYNC=200
RATE_LIMIT_STOREFRONT=100
RATE_LIMIT_DASHBOARD=200

# Sync Engine
SYNC_BATCH_SIZE_TIER1=200
SYNC_BATCH_SIZE_TIER2=500
SYNC_BATCH_SIZE_TIER3=1000
SYNC_MAX_PARALLEL_BATCHES=5

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Object Storage (AWS S3 / DigitalOcean Spaces / MinIO)
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET_NAME=ecommerce-assets
S3_REGION=us-east-1

# Email/SMS
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMS_API_KEY=

# Monitoring
SENTRY_DSN=
LOG_LEVEL=INFO

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=500

# File Upload
MAX_UPLOAD_SIZE_MB=10

# Business Rules
CART_EXPIRY_HOURS=24
ORDER_CANCELLATION_WINDOW_HOURS=1
LOW_STOCK_THRESHOLD=10
